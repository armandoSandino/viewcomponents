
@model ViewComponents.Models.Casa

@{
    var Image = "ico.png";

}

<div class="col-md-3 mb-2">
<div class="card">

<div class="card-header text-right p-1">
<a asp-controller="Home" asp-action=""
asp-route-id="@Model.Id" class="m-0 btn btn-danger">X</a>
</div>

<div class="card-body pt-0">
<img class="card-img-top img-fluid mb-0" src="/image/@Image" alt="Card image cap">
<h5 class="card-title">@Model.Ciudad</h5>
<p class="card-text">
<small>
Ubicacion de la casa: @Model.Ubicacion
<br/>
</small>
</p>
</div>

<div class="card-footer text-muted text-right p-1">
<a asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-info">Ver mas detalles</a>
</div>

</div>
</div>